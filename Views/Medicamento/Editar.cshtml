@using AppReportes.Clases;
@model MedicamentoCLS;
@{
    ViewData["Title"] = "Agregar";
    List<SelectListItem> lista = ViewBag.ListaFormaFarmaceutica;
}

<h1>Editar medicamento</h1>
<hr />
<div class="row">
    <form asp-action="Agregar" asp-controller="Medicamento" id="frmEnviar" method="post">
        <div class="form-group">
            <label asp-for="IdMedicamento"></label>
            <input type="text" class="form form-control" asp-for="IdMedicamento" />
            <span asp-validation-for="IdMedicamento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Concentracion"></label>
            <input type="text" class="form form-control" asp-for="Concentracion" />
            <span asp-validation-for="Concentracion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdFormaFarmaceutica"></label>
            <select asp-for="IdFormaFarmaceutica" class="form form-control"
                    asp-items="@lista"></select>
            <span asp-validation-for="IdFormaFarmaceutica" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stock"></label>
            <input type="number" class="form form-control" asp-for="Stock" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Precio"></label>
            <input type="text" class="form form-control" asp-for="Precio" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Presentacion"></label>
            <input type="text" class="form form-control" asp-for="Presentacion" />
            <span asp-validation-for="Presentacion" class="text-danger"></span>
        </div>
        <div>
            <input type="button" value="Guardar" class="btn btn-primary"
                   onclick="Abrir()" />
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Medicamento">
                Regresar
            </a>
        </div>
    </form>
</div>
<script src="~/js/sweetalert.js"></script>
<script src="~/js/generic.js"></script>
<script>
    function Abrir() {
        mostrarModal().then(res => {
            if (res.value) {
                var frmEnviar = document.getElementById("frmEnviar");
                frmEnviar.submit();
            }
        })
    }
</script>

